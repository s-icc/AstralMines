---
import { THEMES } from "@astral-mines/utils/constants"
---

<div class="dropdown dropdown-end">
  <button class="btn">
    Theme
    <svg
      width="12px"
      height="12px"
      class="h-2 w-2 fill-current opacity-60 inline-block"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 2048 2048"
      ><path d="M1799 349l242 241-1017 1017L7 590l242-241 775 775 775-775z"
      ></path></svg
    >
  </button>
  <ul
    class="dropdown-content mt-2 z-[1] p-2 shadow-2xl bg-base-300 rounded-box w-52"
  >
    {
      Object.entries(THEMES).map(([key, theme]) => (
        <li>
          <input
            type="radio"
            name="theme-dropdown"
            class="theme-controller btn btn-sm btn-block btn-ghost justify-start"
            aria-label={key}
            value={theme}
          />
        </li>
      ))
    }
  </ul>
</div>

<script is:inline>
  // ☝️ This script prevent the FART effect.
  const themeController = document.querySelectorAll(".theme-controller")

  themeController.forEach((input) => {
    input.addEventListener("click", () => {
      localStorage.setItem("theme", input.value)
    })
  })

  if (localStorage.getItem("theme") === null) {
    document.documentElement.setAttribute("data-theme", "default")
  } else {
    const theme = localStorage.getItem("theme")
    document.documentElement.setAttribute("data-theme", theme)
  }
</script>
<script>
  import { themeChange } from "theme-change"
  themeChange()
</script>
