---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Astral Mines">
	<h1 class="text-gradient" slot="title">Astral Mines</h1>
	<a href="game" class="btn btn-primary">Easy</a>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}
	.text-gradient {
		background-image: linear-gradient(
			45deg,
			oklch(var(--p)),
			oklch(var(--s)) 50%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
